<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio01.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button x:Name="bt1"
                    Text="Boton1"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    BackgroundColor="Blue"
                    HeightRequest="70"
                    WidthRequest="200"
                    FontFamily="Verdana"
                    FontSize="16"
                    FontAttributes="Bold"
                    BorderColor="Yellow"
                    BorderWidth="4"
                    Margin="30"/>

            <Button x:Name="bt2"
                    Text="Boton2"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    BackgroundColor="Blue"
                    HeightRequest="70"
                    WidthRequest="200"
                    FontFamily="Verdana"
                    FontSize="16"
                    Clicked="OnBt2Clicked"
                    FontAttributes="Bold"
                    BorderColor="Yellow"
                    BorderWidth="4"
                    Margin="30"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

